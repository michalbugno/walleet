%div.row
  %div.span8
    %form#add-debt.form-inline.well
      %select#giver-id.input-medium{:name => "giver_id"}
        - for member in @group.members
          %option{:value => member.id}= member.name
      %input#amount.input-small{:name => 'amount', :placeholder => 'Amount'}
      %input#description.input-medium{:name => 'description', :placeholder => 'Description'}
      %button#add-debt-button.btn
        %i.icon-plus
        Add debt

    %div#container-groupview-group-feed

  %div.span4
    %h1= @group.name
    %ul.unstyled.group-menu
      %li
        %a.btn.btn-primary{:href => App.nav.path('group:edit', @group.id)} Edit
      %li
        %a#remove-group.btn.btn-danger Remove
    %ul#group-members..unstyled.group-summary
      - for member in @group.members
        %li.member
          %div.amount= member.formattedAmount
          %input{:type => "checkbox", :value => member.id}
          %div.name
            = member.name
          - if member.amount == 0
            %a.remove-membership-link{:href => "#", :data-membership-id => member.id}
              %i.icon-trash

    %div#container-groupview-side-content
